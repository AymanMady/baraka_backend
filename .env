# ===========================================
# Baraka Backend - Environment Variables
# ===========================================
# Copy this file to .env and modify values
# NEVER commit this file to Git
# ===========================================


# ===========================================
# Database Configuration (PostgreSQL)
# ===========================================
POSTGRES_HOST=localhost
POSTGRES_DB=baraka_db
POSTGRES_USER=baraka_user
POSTGRES_PASSWORD=Baraka@2026_SecurePwd
POSTGRES_PORT=5433

# JDBC URL (used by Spring Boot)
SPRING_DATASOURCE_URL=jdbc:postgresql://${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}
SPRING_DATASOURCE_USERNAME=${POSTGRES_USER}
SPRING_DATASOURCE_PASSWORD=${POSTGRES_PASSWORD}


# ===========================================
# Application Configuration
# ===========================================
SPRING_APPLICATION_NAME=baraka-backend
SPRING_PROFILES_ACTIVE=prod
APP_PORT=8080

# Logging
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG


# ===========================================
# JWT Security
# ===========================================
# IMPORTANT: Generate a secure secret for production!
# Command:
# openssl rand -base64 64
JWT_SECRET=Z9R9bK8fWn0A4nYxM5C6z+Z3m0A9KZ4K8dKfY2E1sVJcM9U3y7N0XkqfT9LwE8P

# Token validity (milliseconds)
JWT_ACCESS_TOKEN_EXPIRATION=900000        # 15 minutes
JWT_REFRESH_TOKEN_EXPIRATION=604800000    # 7 days


# ===========================================
# CORS Configuration
# ===========================================
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOWED_HEADERS=Authorization,Content-Type


# ===========================================
# Business Rules
# ===========================================
# Minutes before pickup when cancellation is no longer allowed
CANCEL_CUTOFF_MINUTES=30

# Maximum reservation duration (minutes)
MAX_RESERVATION_DURATION=120


# ===========================================
# File Upload (Images / Products)
# ===========================================
FILE_UPLOAD_DIR=/var/baraka/uploads
MAX_FILE_SIZE=5MB
MAX_REQUEST_SIZE=10MB


# ===========================================
# JVM Options
# ===========================================
JAVA_OPTS=-Xms256m -Xmx512m -XX:+UseG1GC -Dfile.encoding=UTF-8


# ===========================================
# Actuator & Monitoring
# ===========================================
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=always


# ===========================================
# PgAdmin (optional - only with --profile tools)
# ===========================================
PGADMIN_EMAIL=admin@baraka.tech
PGADMIN_PASSWORD=Admin@12345
PGADMIN_PORT=5050
