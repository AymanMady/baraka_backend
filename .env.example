# ===========================================
# Baraka Backend - Environment Variables
# ===========================================
# Copy this file to .env and modify values

# ===========================================
# Database Configuration
# ===========================================
POSTGRES_DB=baraka_db
POSTGRES_USER=baraka_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5432

# ===========================================
# Application Configuration
# ===========================================
SPRING_PROFILES_ACTIVE=prod
APP_PORT=8080

# ===========================================
# JWT Security
# ===========================================
# IMPORTANT: Generate a secure secret for production!
# Use: openssl rand -base64 64
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here_at_least_64_characters

# ===========================================
# Business Rules
# ===========================================
# Minutes before pickup when cancellation is no longer allowed
CANCEL_CUTOFF_MINUTES=30

# ===========================================
# JVM Options (optional)
# ===========================================
JAVA_OPTS=-Xmx512m -Xms256m

# ===========================================
# PgAdmin (optional - only with --profile tools)
# ===========================================
PGADMIN_EMAIL=admin@baraka.tech
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=5050
